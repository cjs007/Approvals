@model Approvals.ViewModels.PaymentRequestEditForm

@{
    ViewBag.Title = "Pay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>


@using (Html.BeginForm("Paid" + "/" + Model.Id, "PaymentRequests"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.CheckNumber)
        @Html.TextBoxFor(m => m.CheckNumber, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PaidDate)
        @Html.TextBoxFor(m => m.PaidDate, new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m => m.Id)

    <button type="submit" class="btn btn-primary">Save</button>
}
